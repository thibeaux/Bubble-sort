#include <iostream>

using namespace std;

void printArray(int arr[], int len) {

  for (int i = 0; i < len; i++) {

    cout << arr[i];



    if(i < len - 1) {

      cout << " ";

    }

  }



  cout << "" << endl;

}

void bubblesort (int num[], int n)
{
    for (int i = 0; i < n; i++)
    {
      for (int j = 0; j < n - i - 1; j++)
	  {   
	    if (num[j] > num[j + 1])
	    {

	      int temp = num[j];

	      num[j] = num[j + 1];

	      num[j + 1] = temp;
	    }
	  }
	cout << "After pass " << i << "  : " ;

    // Print array after every pass

    printArray(num, n);
    }
    
}

  int main ()
  {
    int num[] = { 0 };
    int i = 0;
    int len = sizeof (num);
    cout << "Enter a number and type*done* when finished: " << endl;

    while (cin >> num[i])
    {
	    i++;
    }

    printArray(num,len);
    bubblesort(num,len);
    return 0;
  }
